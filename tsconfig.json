{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"paths": {
			"fetch-cache": ["workspaces/fetch-cache/packages/fetch-cache/src"],
			"fetch-cache/*": ["workspaces/fetch-cache/packages/fetch-cache/src/*"],
			"@fetch-cache/astro": ["workspaces/fetch-cache/packages/astro/src"],
			"@fetch-cache/astro/*": ["workspaces/fetch-cache/packages/astro/src/*"]
		}
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.jsx",
		"src/**/*.astro",
		"workspaces/fetch-cache/**/*.ts",
		"workspaces/fetch-cache/**/*.mjs",
		"workspaces/fetch-cache/**/*.js",
		"astro.config.ts"
	],
	"exclude": ["node_modules", "workspaces/**/node_modules"]
}
